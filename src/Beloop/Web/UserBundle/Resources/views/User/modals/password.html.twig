<div id="edit-password" class="md-modal colored-header md-effect-1">
    <div class="md-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
            <h3 class="modal-title">{{ 'profile.edit_password.text'|trans }}</h3>
        </div>
        <div class="modal-body form">
            {{ render(controller(
            'WebUserBundle:User:editPassword'
            )) }}
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" class="btn btn-default md-close">{{ 'common.button.cancel'|trans }}</button>
            <button type="submit" data-dismiss="modal" class="btn btn-primary" form="beloop_user_form_type_password">{{ 'common.button.save'|trans }}</button>
        </div>
    </div>
</div>