<div class="gallery-container">
    {% for img in images %}
        <div class="item">
            <div class="photo">
                <div class="img">
                    <a href="{{ vich_uploader_asset(img, 'imageFile') }}"><img src="{{ vich_uploader_asset(img, 'imageFile')| imagine_filter('instagram_thumb') }}" alt="{{ img.title }}"></a>
                </div>
                <div class="description">
                    <div class="icon"><a href="#"><i class="s7-like"></i></a></div>
                    <div class="desc">
                        <h4>{{ img.title }}</h4><span>{{ img.createdAt|localizeddate('medium', 'none') }}</span>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>