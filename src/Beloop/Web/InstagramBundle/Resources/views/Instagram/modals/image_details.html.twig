<div id="image-details-{{ image.id }}" class="md-modal full-width md-effect-1 md-instagram-modal">
    <div class="md-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-12 col-sm-8 image-wrapper">
                    <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.title }}" class="img-responsive">
                </div>
                <div class="col-xs-12 col-sm-4">
                    <div class="desc">
                        <h4>{{ image.title }}</h4>
                        <p>{{ 'instagram.by.label'|trans }} <a href="#">{{ image.user.fullName }}</a> </p>
                        <p>{{ image.createdAt|localizeddate('medium', 'none') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>