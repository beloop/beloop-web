{% form_theme form 'AdminCommonBundle::Forms/fields.html.twig' %}

<div id="upload-image" class="md-modal colored-header md-effect-1">
    <div class="md-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
            <h3 class="modal-title">{{ 'instagram.modal.title.text'|trans }}</h3>
        </div>
        <div class="modal-body form">
            <div class="row instagram-form">
                <div class="col-xs-12 col-sm-6">
                    <div class="image-placeholder" data-target="#{{ form.imageFile.file.vars.id}}">
                        <img id="instagram-img" class="img-responsive" src="" alt="">
                        <span class="s7-camera"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    {{ render(controller('DashboardBundle:Instagram:uploadImage')) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" class="btn btn-default md-close">{{ 'cancel'|trans }}</button>
            <button type="submit" data-dismiss="modal" class="btn btn-primary" form="{{ form.vars.name }}">{{ 'upload'|trans }}</button>
        </div>
    </div>
</div>