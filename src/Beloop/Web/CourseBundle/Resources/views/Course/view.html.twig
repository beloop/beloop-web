{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block back_to %}
    {% if course.isDemo %}
        <a href="{{ path('beloop_public_courses') }}"><span class="s7-angle-left"></span> {{ 'menu.public_courses.title'|trans }}</a>
    {% else %}
        <a href="{{ path('beloop_my_courses') }}"><span class="s7-angle-left"></span> {{ 'menu.my_courses.title'|trans }}</a>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="page-head">
        <h2>{{ course.name }}</h2>
    </div>

    <div class="main-content">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="sections">
                    {% for lesson in course.lessons %}
                        <div class="panel-group accordion accordion-color">
                            <div class="panel panel-default {% if not lesson.available and not is_granted('ROLE_TEACHER') %}panel-transparent panel-borders{% endif %}">
                                <div class="panel-heading">
                                    <h4 class="panel-title">{{ lesson.name }}</h4>
                                </div>
                                <div class="panel-body">
                                    {% if lesson.available or is_granted('ROLE_TEACHER') %}
                                        {% for module in lesson.modules %}
                                            <a href="{{ path('beloop_view_module_' ~ module.type, {'code': course.code, 'id': module.id}) }}" class="module"><span class="s7-{{ module.icon }}"></span> {{ module.name }}</a>
                                        {% endfor %}
                                    {% elseif course.isDemo %}
                                        <span>{{ 'preview.lesson_not_available.text'|trans }}</span>
                                    {% else %}
                                        <span>{{ 'course.lesson_not_available.text'|trans({'%date%' : lesson.startDate|localizeddate('medium', 'none')}) }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="hidden-xs hidden-sm col-md-4">
                <h4 class="text-uppercase">{{ 'course.description.title'|trans }}</h4>
                {{ course.description|raw }}

                {% if not course.isDemo %}
                <h4 class="text-uppercase">{{ 'course.details.title'|trans }}</h4>
                <p class="clearfix">
                    <span class="s7-date"></span>
                    <span>{{ 'course.start_date.title'|trans }}</span>
                    <span class="pull-right"> {{ course.startDate|localizeddate('full', 'none', user.language.iso) }}</span>
                </p>
                <p class="clearfix">
                    <span class="s7-date"></span>
                    <span>{{ 'course.end_date.title'|trans }}</span>
                    <span class="pull-right"> {{ course.endDate|localizeddate('full', 'none', user.language.iso) }}</span>
                </p>
                <h4 class="text-uppercase">{{ 'course.teachers.title'|trans }}</h4>
                <p class="clearfix">
                    {% for user in course.getTeachers %}
                    <span class="s7-study"></span>
                    <a href="{{ path('beloop_user_view_profile', {'id': user.id}) }}">{{ user.fullName }}</a>
                    {% endfor %}
                </p>

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
