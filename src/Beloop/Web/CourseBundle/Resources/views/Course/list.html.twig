{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-head">
        <h2>{{ 'menu.my_courses.title'|trans }}</h2>
    </div>

    <div class="main-content">
        <div class="row">
            {% for course in courses %}
                <div class="col-xs-12 col-sm-6">
                    <div class="panel panel-default panel-heading-fullwidth panel-course">
                        <div class="panel-heading">
                            <span class="title">{{ course.name }}</span>
                        </div>
                        <div class="panel-body">
                            {{ course.description | raw }}
                        </div>
                        <div class="panel-course-footer">
                            <a href="{{ path('beloop_view_course', {'code': course.code}) }}" class="btn btn-block btn-alt4"><span class="s7-notebook"></span></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}