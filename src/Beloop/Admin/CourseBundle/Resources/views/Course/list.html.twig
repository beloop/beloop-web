{% extends 'AdminCommonBundle::base.html.twig' %}

{% block title %}Admin courses{% endblock %}
{% block nav_title %}Admin area{% endblock %}

{% block body %}
    <div class="page-head">
        <h2>Courses</h2>
    </div>

    <div class="main-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="widget widget-fullwidth widget-small">
                    <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row am-datatable-body">
                            <div class="col-sm-12">
                                <table class="table table-striped table-fw-widget table-hover">
                                    <thead>
                                    <tr>
                                        <th width="15%">Code</th>
                                        <th width="30%">Name</th>
                                        <th width="20%">Start Date</th>
                                        <th width="20%">End Date</th>
                                        <th width="5%">#Users</th>
                                        <th width="10%">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody class="no-border-x">
                                    {% for course in courses %}
                                        <tr>
                                            <td>{{ course.code }}</td>
                                            <td>{{ course.name }}</td>
                                            <td>{{ course.startDate|date("l, jS F Y") }}</td>
                                            <td>{{ course.endDate|date("l, jS F Y") }}</td>
                                            <td>0</td>
                                            <td>
                                                <div class="btn-toolbar">
                                                    <div class="btn-group btn-space">
                                                        <button type="button" class="btn btn-default btn-xs"><i class="icon s7-look"></i></button>
                                                        <button type="button" class="btn btn-default btn-xs"><i class="icon s7-pen"></i></button>
                                                        <button type="button" class="btn btn-default btn-xs"><i class="icon s7-copy-file"></i></button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row am-datatable-footer">
                            <div class="col-sm-5">
                                {% set firstElement = limit * (page - 1) + 1 %}
                                {% set lastElement = min(firstElement + limit - 1, totalElements) %}
                                <div class="dataTables_info" id="table3_info" role="status" aria-live="polite">Showing {{ firstElement }} to {{ lastElement }} of {{ totalElements }} entries</div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="table3_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_button previous disabled" id="table3_previous">
                                            <a href="#" aria-controls="table3" data-dt-idx="0" tabindex="0">Previous</a>
                                        </li>
                                        <li class="paginate_button active">
                                            <a href="#" aria-controls="table3" data-dt-idx="1" tabindex="0">1</a>
                                        </li>
                                        <li class="paginate_button ">
                                            <a href="#" aria-controls="table3" data-dt-idx="2" tabindex="0">2</a>
                                        </li>
                                        <li class="paginate_button next" id="table3_next">
                                            <a href="#" aria-controls="table3" data-dt-idx="8" tabindex="0">Next</a
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}