<div id="list_users" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <div class="row am-datatable-body">
        <div class="col-sm-12">
            <table class="table table-striped table-fw-widget table-hover">
                {% include 'AdminCommonBundle:Common:Tables/head.html.twig' with {
                    rows: [
                        { name: 'admin.user.field.full_name.title'|trans, width: 15 },
                        { name: 'admin.user.field.email.title'|trans, width: 20 },
                        { name: 'admin.user.field.role.title'|trans, width: 10 },
                        { name: 'admin.user.field.start_date.title'|trans, width: 20 },
                        { name: 'admin.user.field.end_date.title'|trans, width: 20 },
                        { name: 'admin.common.field.actions.title'|trans, width: 5 },
                    ],
                } %}
                <tbody class="no-border-x">
                {% for user in users%}
                    <tr>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join('<br>')|raw }}</td>
                        <td>{{ course.getEnrollmentForUser(user).enrollmentDate|date("l, jS F Y") }}</td>
                        <td>{{ course.getEnrollmentForUser(user).endDate|date("l, jS F Y") }}</td>
                        <td>
                            <div class="btn-toolbar">
                                <div class="btn-group btn-space">
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
