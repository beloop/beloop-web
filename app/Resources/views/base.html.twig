    <![endif]-->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
</head>
<body>
<div class="am-wrapper am-fixed-sidebar am-white-header">
    {% block navbar %}
    {% include 'CommonBundle:Header:navbar.html.twig' with {nav_title: block('nav_title')} %}
    {% endblock %}
    <div class="am-left-sidebar">
        <div class="content">
            <div class="am-logo"></div>
            {% include 'CommonBundle:Menu:sidebar.html.twig' %}
        </div>
    </div>
    <div class="am-content">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </div>
</div>
</body>
</html>
